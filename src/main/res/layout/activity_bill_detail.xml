<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Details"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/detailMonthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month: "
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/detailUnitsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units Used: "
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/detailRebateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rebate: "
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/detailTotalChargesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Charges: "
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/detailFinalCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Cost: "
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="?attr/colorPrimary"
    />

</LinearLayout>